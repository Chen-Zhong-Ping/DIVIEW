            Button:
                size_hint_x: 0.4
                text: "add data"
                on_release: datalist_panel_id.show_adddatadialog()

        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'

            Label:
                text:

        DataListPanel:
            id: datalist_panel_id


    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.36
        pos_hint: {'x': 0.64, 'y': 0}

        Button:
            size_hint_y: 0.1
            text: "to plot screen >"
            on_release: app.root.current = "plot_screen"

        Button:
            size_hint_y: 0.1
            text: "calculator"
            on_release: calculator_id.show_hide()

        Calculator:
            id: calculator_id
            size_hint_x: 0
            opacity: 0


