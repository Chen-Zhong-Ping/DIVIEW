        orientation: 'horizontal'
        Label:
            text: "case name"
        TextInput:
            id: case_name_id
            multiline: False

    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: "description"
        TextInput:
            id: description_id

    BoxLayout:
        size_hint_y: 0.2
        orientation: 'horizontal'
        Button:
            text: "Add"
            on_release: root.tryload(case_name_id.text, description_id.text)

        Button:
            text: "Cancel"
            on_release: root.cancel()

