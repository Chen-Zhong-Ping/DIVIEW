    type_indicator: type_indicator_id
    cal_var_name: cal_var_name_id
    cal_var_unit: cal_var_unit_id
    cal_var_formula: cal_var_formula_id

    BoxLayout:
        size_hint_y: 0.2

        Label:
            text: "name:"
        TextInput:
            id: cal_var_name_id

        Label:
            text: "unit:"
